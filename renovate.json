{
  "extends": [
    "monorepo:angular",
    "monorepo:ngrx",
    "group:definitelyTyped",
    "schedule:nonOfficeHours"
  ],
  "pinVersions": false,
  "ignoreUnstable": false,
  "semanticCommits": true,
  "semanticPrefix": "build:",
  "commitMessage": "{{semanticPrefix}}update {{depName}} to version {{newVersion}}",
  "packageFiles": [
    "package.json",
    "ngx-tools/package.json"
  ],
  "packages": [
    {
      "groupName": "release",
      "packagePatterns": [
        "semantic-release"
      ]
    },
    {
      "groupName": "karma",
      "packagePatterns": [
        "karma",
        "jasmine"
      ]
    },
    {
      "groupName": "jest",
      "packagePatterns": [
        "jest"
      ]
    },
    {
      "groupName": "protractor",
      "packagePatterns": [
        "protractor"
      ]
    }
  ]
}
