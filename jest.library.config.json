{
  "setupTestFrameworkScriptFile": "<rootDir>/config/setup-jest.ts",
  "globals": {
    "__TS_CONFIG__": "tsconfig.spec.json",
    "__TRANSFORM_HTML__": true
  },
  "transform": {
    "^.+\\.(ts|js|html)$": "<rootDir>/node_modules/jest-preset-angular/preprocessor.js"
  },
  "testRegex": "src\\/(?!demo).+\\/.+\\.spec\\.ts$",
  "moduleFileExtensions": [
    "ts",
    "js",
    "html",
    "json"
  ],
  "mapCoverage": true,
  "moduleDirectories": [
    "node_modules",
    "src"
  ],
  "testPathIgnorePatterns": [
    "/node_modules/"
  ],
  "transformIgnorePatterns": [
    "node_modules/(?!@ngrx)"
  ],
  "moduleNameMapper": {
    "^@terminus/ngx-tools$": "<rootDir>/src/@terminus/ngx-tools/src/public-api.ts",
    "^@terminus/ngx-tools/src/(.*)": "<rootDir>/src/@terminus/ngx-tools/src/$1",
    "^@terminus/ngx-tools/testing$": "<rootDir>/src/@terminus/ngx-tools/testing/src/public-api.ts",
    "^@terminus/ngx-tools/testing/src/(.*)": "<rootDir>/src/@terminus/ngx-tools/testing/src/$1",
    "^@terminus/ngx-tools/coercion$": "<rootDir>/src/@terminus/ngx-tools/coercion/src/public-api.ts",
    "^@terminus/ngx-tools/coercion/src/(.*)": "<rootDir>/src/@terminus/ngx-tools/coercion/src/$1",
    "^@terminus/ngx-tools/keycodes$": "<rootDir>/src/@terminus/ngx-tools/keycodes/src/public-api.ts",
    "^@terminus/ngx-tools/keycodes/src/(.*)": "<rootDir>/src/@terminus/ngx-tools/keycodes/src/$1",
    "^@terminus/ngx-tools/regex$": "<rootDir>/src/@terminus/ngx-tools/regex/src/public-api.ts",
    "^@terminus/ngx-tools/regex/src/(.*)": "<rootDir>/src/@terminus/ngx-tools/regex/src/$1",
    "(.*)": "<rootDir>/src/$1"
  },
  "collectCoverageFrom": [
    "src/@terminus/ngx-tools/**/!(public-api).ts",
    "src/@terminus/ngx-tools/coercion/src/**/*.ts",
    "!src/@terminus/ngx-tools/coercion/src/public-api.ts",
    "!src/@terminus/ngx-tools/testing/src/mocks/**/*",
    "!src/@terminus/ngx-tools/keycodes/**/*"
  ]
}
