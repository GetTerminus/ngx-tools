{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "demo",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "incremental": true,
    "lib": [
      "es2016",
      "dom"
    ],
    "moduleResolution": "node",
    "outDir": "./dist/out-tsc",
    "paths": {
      "@terminus/ngx-tools": ["./dist/ngx-tools/public-api.ts"],
      "@terminus/ngx-tools/coercion": ["./dist/ngx-tools/coercion/public-api.ts"],
      "@terminus/ngx-tools/keycodes": ["./dist/ngx-tools/keycodes/public-api.ts"],
      "@terminus/ngx-tools/regex": ["./dist/ngx-tools/regex/public-api.ts"],
      "@terminus/ngx-tools/testing": ["./dist/ngx-tools/testing/public-api.ts"]
    },
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }
    ],
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": [
    "**/*.spec.ts"
  ]
}
