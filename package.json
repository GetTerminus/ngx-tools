{
  "name": "ng-packaged",
  "version": "0.0.0-PLACEHOLDER",
  "license": "MIT",
  "scripts": {
    "//=> Section: Demo App": "______________________________",
    "ng": "ng",
    "start:app": "ng serve",
    "build:app": "cpr dist/ngx-tools src/@terminus/ngx-tools && ng build --app packages && rimraf src/@terminus",
    "test:app": "ng test",
    "lint:app": "ng lint",
    "e2e:app": "ng e2e",
    "//=> Section: Library": "______________________________",
    "docs": "yarn run docs:toc",
    "commitmsg": "validate-commit-msg",
    "validate:circleci": "circleci config validate -c .circleci/config.yml",
    "cm": "./node_modules/.bin/git-cz",
    "semantic-release": "semantic-release",
    "check:next-release": "cd dist_package/ && ../node_modules/.bin/semantic-release --dry-run",
    "precommit": "lint-staged",
    "lint-staged": "lint-staged",
    "contributors:add": "./node_modules/.bin/all-contributors add",
    "contributors:generate": "./node_modules/.bin/all-contributors generate",
    "contributors:check": "./node_modules/.bin/all-contributors check",
    "//=> Section: Documentation": "",
    "docs:toc": "doctoc --title '**Table of Contents**' --maxlevel 4 ./README.md",
    "//=> Section: Library:Build": "",
    "build": "rimraf dist && ng-packagr -p ngx-tools/package.json",
    "//=> Section: Library:Test": "",
    "test:NOTE": "jest --watch: currently hangs when determining which tests to run. For now we simply run all",
    "test:config": "jest --showConfig",
    "test": "jest --watch",
    "test:ci": "jest --runInBand --coverage",
    "test:debug": "jest --debug --runInBand",
    "lint": "npx tslint --fix --project ./ngx-tools/tsconfig.lint.json",
    "lint:ci": "npx tslint --project ./ngx-tools/tsconfig.lint.json",
    "codecov:upload": "npx codecov -f coverage/*.json"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "ngx-tools/tsconfig.spec.json",
        "enableTsDiagnostics": true
      },
      "__TRANSFORM_HTML__": true
    },
    "transform": {
      "^.+\\.(ts|js|html)$": "<rootDir>/node_modules/jest-preset-angular/preprocessor.js"
    },
    "testRegex": "(^((?!.*(out-tsc/|coverage/|dist/|src/demo/|e2e/)).).*spec\\.ts.*$)",
    "moduleFileExtensions": [
      "ts",
      "js",
      "html"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!@ngrx)"
    ],
    "clearMocks": true,
    "collectCoverageFrom": [
      "ngx-tools/**/!(public-api|index).ts"
    ],
    "setupTestFrameworkScriptFile": "./tools/jest-setup.ts"
  },
  "lint-staged": {
    "ngx-tools/**/*.ts": [
      "npx tslint --fix --project ./ngx-tools/tsconfig.lint.json",
      "git add"
    ]
  },
  "config": {
    "loglevel": "verbose",
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "./tools/cz-config.js"
    }
  },
  "release": {
    "branch": "wip"
  },
  "publishConfig": {
    "tag": "wip"
  },
  "release": {
    "verifyConditions": [
      "condition-circle",
      "@semantic-release/npm",
      "@semantic-release/github"
    ],
    "getLastRelease": "@semantic-release/npm",
    "publish": [
      {
        "path": "@semantic-release/exec",
        "cmd": "./tools/inject-version.sh ${nextRelease.version}"
      },
      {
        "path": "@semantic-release/npm",
        "npmPublish": true,
        "pkgRoot": "dist/ngx-tools"
      },
      {
        "path": "@semantic-release/github",
        "npmPublish": false
      }
    ]
  },
  "engines": {
    "node": ">= 8.0.0",
    "npm": ">= 5.0.0",
    "yarn": ">= 1.0.0"
  },
  "dependencies": {
    "@angular/common": "~5.2.5",
    "@angular/compiler": "~5.2.5",
    "@angular/core": "~5.2.5",
    "@angular/forms": "~5.2.5",
    "@angular/http": "~5.2.5",
    "@angular/platform-browser": "~5.2.5",
    "@angular/platform-browser-dynamic": "~5.2.5",
    "@angular/router": "~5.2.5",
    "core-js": "^2.5.3",
    "rxjs": "^5.5.6",
    "zone.js": "^0.8.20"
  },
  "devDependencies": {
    "@angular-devkit/schematics": "^0.4.5",
    "@angular/cli": "~1.7.3",
    "@angular/compiler-cli": "~5.2.5",
    "@angular/language-service": "~5.2.5",
    "@semantic-release/exec": "^2.2.3",
    "@semantic-release/github": "^4.2.7",
    "@semantic-release/npm": "^3.2.2",
    "@types/jasmine": "~2.8.6",
    "@types/node": "~9.4.7",
    "all-contributors-cli": "^4.11.1",
    "codecov": "^3.0.0",
    "codelyzer": "^4.2.1",
    "commitizen": "^2.9.6",
    "condition-circle": "^2.0.1",
    "cpr": "^3.0.0",
    "cz-customizable": "^5.2.0",
    "doctoc": "^1.3.1",
    "husky": "^0.14.3",
    "jasmine-core": "~3.1.0",
    "jasmine-spec-reporter": "~4.2.0",
    "jest": "^22.4.2",
    "jest-preset-angular": "^5.2.1",
    "karma": "~2.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^1.4.2",
    "karma-jasmine": "~1.1.1",
    "karma-jasmine-html-reporter": "^0.2.2",
    "lint-staged": "^7.0.0",
    "ng-packagr": "2.2.0",
    "protractor": "~5.3.0",
    "rimraf": "^2.6.1",
    "semantic-release": "^15.0.2",
    "ts-node": "~5.0.1",
    "tsickle": "^0.27.2",
    "tslint": "~5.9.1",
    "typescript": "~2.7.2",
    "validate-commit-msg": "^2.14.0"
  }
}
